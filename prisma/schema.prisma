generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ReferralSource {
  Friend
  TICTOK
  AGENT
  Facebook
  Instagram
  SCHOOL
  Other
}

enum Role {
  STUDENT
  ADMIN
}

model Grade {
  id       String     @id @default(uuid())
  name     String     @unique
  students Students[]
}

model Sessions {
  id           String   @id @default(uuid())
  refreshToken String
  deviceInfo   String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         Users?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String?
}

model Users {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      Role       @default(STUDENT)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  admin     Admins?
  student   Students?
  sessions  Sessions[]
}

model Admins {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  userId    String @unique
  user      Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Students {
  id             String          @id @default(uuid())
  firstName      String
  lastName       String
  grandName      String
  age            Int
  schoolName     String
  city           String
  region         String
  gradeId        String?
  userId         String          @unique
  grade          Grade?          @relation(fields: [gradeId], references: [id])
  user           Users           @relation(fields: [userId], references: [id], onDelete: Cascade)
  referralSource ReferralSource?
}
